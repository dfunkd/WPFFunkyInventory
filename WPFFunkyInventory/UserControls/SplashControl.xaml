<UserControl x:Class="WPFFunkyInventory.UserControls.SplashControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFFunkyInventory.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="OnLoad">
    
    <DockPanel LastChildFill="True">
        <TextBlock x:Name="tbCopyright" DockPanel.Dock="Bottom" FontSize="14" Foreground="#FF999999" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" />
        <TextBlock DockPanel.Dock="Top" FontSize="48" FontWeight="Bold" Foreground="#FF999999" HorizontalAlignment="Center" Text="Funky Inventory" VerticalAlignment="Center" />
    </DockPanel>
</UserControl>
